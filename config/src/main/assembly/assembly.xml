<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>${project.version}-cli</id>
	<formats>
		<format>zip</format>
	</formats>

	<fileSets>
		<fileSet>
			<directory>units</directory>
			<outputDirectory>units</outputDirectory>
			<includes>
				<include>**/*.cfg</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>units.properties</include>
				<include>app.properties</include>
				<include>log4j.properties</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>scripts/bin</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>appctrl.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>scripts/logback</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>*.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>wasu*config.jar</include>
			</includes>
			<excludes>
				<exclude>*api.jar</exclude>
			</excludes>
		</fileSet>
	</fileSets>

</assembly>